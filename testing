        function redirectToProduct(productNumber) {
            const productUrls = {
                1: '/automacao-whatsapp-business',
                2: '/website-ultra-rapido-cdn',
                3: '/consultoria-vip-automacao'
            };
            
            const productNames = {
                1: 'Sistema de Automa√ß√£o WhatsApp Business',
                2: 'Website Ultra R√°pido + CDN Global',
                3: 'Consultoria VIP: Automa√ß√£o Completa'
            };
            
            // Por enquanto, redireciona para WhatsApp com informa√ß√µes do produto
            const message = encodeURIComponent(`Oi Marcelo! Sou ${userName || 'visitante'} de ${userCity}. Tenho interesse no ${productNames[productNumber]}. Vim atrav√©s do seu site premium!`);
            window.open(`https://wa.me/5511999999999?text=${message}`, '_blank');
            
            // Quando tiver as p√°ginas, descomente a linha abaixo:
            // window.location.href = productUrls[productNumber];
        }

        document.getElementById('user-name').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                startChat();
            }
        });

        window.addEventListener('load', () => {
            setTimeout(() => {
                if (speechSynthesis.getVoices().length === 0) {
                    speechSynthesis.addEventListener('voiceschanged', initVoices);
                } else {
                    initVoices();
                }
                getLocationData();
                
                setTimeout(() => {
                    openChat();
                }, 3500);
            }, 1200);
        });

        document.addEventListener('click', function initSpeech() {
            if (speechSynthesis.getVoices().length === 0) {
                speechSynthesis.speak(new SpeechSynthesisUtterance(''));
            }
            document.removeEventListener('click', initSpeech);
        });
    </script>

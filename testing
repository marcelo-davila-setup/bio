            }

            updateLocationWithName(userName);
            conversationStep = 1;
            
            const hoje = new Date();
            const hora = hoje.getHours();
            const minutos = hoje.getMinutes();
            
            const cumprimento = hora >= 5 && hora < 12 ? "Bom dia" : 
